div class="row"
  div class="col-md-6 col-md-offset-3 api-authorize"
    div class="panel panel-default"
      div class="panel-body"
        = form_tag(insightly_signup_path, method: "post") do
          div class="form-group"
            = label_tag(:key, "API KEY:")
            = text_field_tag(:key, nil, class: "form-control")
          button type="submit" class="btn btn-default" SignUp
